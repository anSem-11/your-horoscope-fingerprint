{% set links = [
    {link: path('homepage'), text: 'Home', route: 'homepage'},
] %}

{#{link: path('user:profile'), text: 'Profile', route: 'user:profile'}#}

<header class="header js-header">
    <div class="header-wrap">
        <div class="header-block">
            <a href="{{ path('homepage') }}" class="header-block__link">
                <div class="header-block__link-logo"></div>
            </a>
            <nav class="header-block-nav">
                {% for item in links %}
                    {% if loop.index == 1 %}
                        <a href="{{ item.link }}"
                           class="header-block-nav__item header-block-nav__item--one{% if app.request.get('_route') == 'homepage' %} active no-click{% endif %}">
                            <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    xmlns:xlink="http://www.w3.org/1999/xlink"
                                    width="17px" height="17px">
                                <defs>
                                    <filter id="Filter_0">
                                        <feFlood class="svg-home" flood-color="#494949" flood-opacity="1" result="floodOut"/>
                                        <feComposite operator="atop" in="floodOut" in2="SourceGraphic" result="compOut"/>
                                        <feBlend mode="normal" in="compOut" in2="SourceGraphic"/>
                                    </filter>

                                </defs>
                                <g filter="url(#Filter_0)">
                                    <path fill-rule="evenodd" fill="#494949"
                                          d="M17.001,8.889 L13.813,5.555 L13.813,0.555 L11.688,0.555 L11.688,3.333 L8.500,-0.001 L-0.001,8.889 L-0.001,9.445 L2.124,9.445 L2.124,15.000 L7.437,15.000 L7.437,11.667 L9.563,11.667 L9.563,15.000 L14.876,15.000 L14.876,9.445 L17.001,9.445 L17.001,8.889 Z"/>
                                </g>
                            </svg>
                        </a>
                    {% else %}
                        <a href="{{ item.link }}" class="header-block-nav__item hover{% if app.request.get('_route') == item.route %} active-link no-click{% endif %}">{{ item.text }}</a>
                    {% endif %}
                {% endfor %}
            </nav>
            <div class="shadow js-shadow"></div>
            <div class="header-burger js-burger">
                {% for i in 1..3 %}
                    <div class="header-burger__line" data-id="{{ i }}"></div>
                {% endfor %}
            </div>
            <div class="header-menu js-header-menu">
                {% for item in links %}
                    <a href="{{ item.link }}" class="header-menu__item hover">{{ item.text }}</a>
                {% endfor %}
            </div>
        </div>
    </div>
</header>